{# TEMPLATE #}
<div class="container py-12 lg:py-16 flex justify-start">
  {% if label %}
    <div class="text-grey-400 my-auto mr-2 lg:mr-4">{{ label }}</div>
  {% endif %}

  {% if social_links is not empty %}
    {% for social_link in social_links %}
      {% set social_media = 'share-' ~ social_link.title %}
        <div class="inline-flex align-text-bottom mr-1 bg-primary p-2 rounded-full">
          <a href="{{ social_link.url }}" target="_blank">
            {{ pattern('svg_icon', {
              icon: social_media,
              size: 'w-3 h-3 sm:w-5 sm:h-5',
              color: 'text-white',
            }) }}
          </a>
        </div>
    {% endfor %}
  {% endif %}
</div>
