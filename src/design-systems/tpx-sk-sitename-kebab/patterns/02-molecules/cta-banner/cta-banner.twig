{#
Classes
#}
{% set classes = [
  'm-cta-banner',
  "py-6 w-full",
  'bg-secondary-300 text-black',
  'dark:bg-secondary-700 dark:text-white',
] | sort | join(' ') | trim %}
{% set attributes = attributes|default(create_attribute()).addClass(classes) %}

<section {{ attributes }}>
  <div class="container sm:flex">
    <div class="lg:flex sm:px-8 lg:px-0 lg:text-lg w-full">
      <div class="lg:pr-40 pb-4 self-center lg:w-3/5 font-serif">
        {% if heading %}
          <h2 class="lg:text-6xl text-4xl mb-2 relative">{{ heading }}</h2>
        {% endif %}

        {% if subheading %}
          {{ subheading }}
        {% endif %}
      </div>
      <div class="flex flex-col sm:flex-row sm:space-x-3 self-center lg:w-2/5 lg:text-right">
        {% if cta_text_1 and cta_link_1 %}
          {{ pattern('button', {text: cta_text_1, url: cta_link_1, color: button_color}, 'secondary') }}
        {% endif %}

        {% if cta_text_2 and cta_link_2 %}
          {{ pattern('button', {text: cta_text_2, url: cta_link_2, color: button_color}, 'primary') }}
        {% endif %}
      </div>
    </div>
  </div>
</section>
